!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Simplebloglanding"
      %meta{:content => content_for?(:description) ? yield(:description) : "Simplebloglanding", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  - if current_page? root_path
    %body{contenteditable: "true", data: { controller: controller_name, action: action_name}}
  - else
    %body{data: { controller: controller_name, action: action_name}}
  .header
    .container
      = render 'layouts/navigation'
  .container
    .row
      .span12
        = render 'layouts/messages'
        = yield
    %footer
  / ! end of .container
